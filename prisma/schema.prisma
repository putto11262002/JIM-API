generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Staff {
  id        String    @id @default(uuid())
  firstName String
  lastName  String
  email     String    @unique
  username  String    @unique
  password  String
  role      StaffRole
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum StaffRole {
  ADMIN
  SCOUT
  BOOKER
}

model Model {
  id String @id @default(uuid())
}

model Job {
  id String @id @default(uuid())
}

model Option {
  id String @id @default(uuid())
}
